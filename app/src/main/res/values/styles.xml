<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting.CustomProgressIndicator" parent="@style/Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorSize">80dp</item>
        <item name="trackCornerRadius">4dp</item>
        <item name="indicatorColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:windowBackground">?attr/colorSurfaceContainerLowest</item>
        <item name="android:statusBarColor">?attr/colorSurfaceContainerLowest</item>
        <item name="android:navigationBarColor">?attr/colorSurfaceContainerLowest</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.Hammami">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.App.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>



</resources>
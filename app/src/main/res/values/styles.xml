<resources>

    <style name="Theme.App.Starting.CustomProgressIndicator" parent="@style/Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorSize">80dp</item>
        <item name="trackCornerRadius">4dp</item>
        <item name="indicatorColor">@color/md_theme_onPrimaryContainer</item>
    </style>

    <style name="FullScreenDialogStylexxxxxxxx">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.Hammami">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


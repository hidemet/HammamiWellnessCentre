<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|center_horizontal"
    android:padding="24dp"
    android:orientation="vertical">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_loyalty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Ecco il tuo coupon!"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Il tuo coupon è stato creato correttamente! Il codice da utilizzare al tuo prossimo acquisto è il seguente:"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputCouponCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Codice Coupon"
            android:layout_marginTop="24dp"
            app:endIconContentDescription="Copia il codice"
            app:endIconDrawable="@drawable/ic_content_copy"
            app:endIconMode="custom">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textFieldCouponCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:text="1234567890"
                />
        </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:windowSoftInputMode="adjustResize">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.Material3.Toolbar.Surface"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="@string/payment" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/linearProgressIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Service/Gift Card Details Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemCard"
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Service Booking Details -->
                    <LinearLayout
                        android:id="@+id/serviceBookingDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/serviceName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

                        <TextView
                            android:id="@+id/serviceDateTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:drawablePadding="8dp"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            app:drawableStartCompat="@drawable/ic_calendar" />

                        <TextView
                            android:id="@+id/serviceDuration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:drawablePadding="8dp"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            app:drawableStartCompat="@drawable/ic_schedule" />
                    </LinearLayout>

                    <!-- Gift Card Details -->
                    <LinearLayout
                        android:id="@+id/giftCardDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/giftCardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gift_card"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/giftCardValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="50.00 â‚¬"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Discount Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/discountSection"
                style="@style/Widget.Material3.CardView.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Sezione input codice sconto -->
                    <LinearLayout
                        android:id="@+id/discountInputContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/discountCodeInput"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:endIconMode="clear_text"
                            app:errorIconDrawable="@null">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/discountCodeEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/discount_code"
                                android:imeOptions="actionDone"
                                android:inputType="textCapCharacters"
                                android:maxLength="16" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/applyDiscountButton"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:enabled="false"
                            android:text="@string/apply_discount" />

                    </LinearLayout>

                    <!-- Codice sconto applicato (visibile solo quando attivo) -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/appliedDiscountContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/appliedDiscountChip"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="false"
                            app:chipIcon="@drawable/ic_check_circle"
                            app:chipIconTint="?attr/colorPrimary"
                            app:closeIcon="@drawable/ic_close"
                            app:closeIconTint="?attr/colorError" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Payment Method Section with Card Details -->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/paymentMethodCard"
                style="@style/Widget.Material3.CardView.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header con titolo e sottotitolo -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/payment_method"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@string/select_payment_method"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <!-- Gruppo di chip migliorato per i metodi di pagamento -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/paymentMethodChips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:selectionRequired="true"
                        app:paddingHorizontal="16dp"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/creditCardChip"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/credit_card"
                            app:chipIcon="@drawable/ic_credit_card"
                            app:chipIconEnabled="true"
                            app:chipIconTint="?attr/colorOnSurface" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/paypalChip"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/paypal"
                            app:chipIcon="@drawable/ic_paypal"
                            app:chipIconEnabled="true" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/googlePayChip"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/google_pay"
                            app:chipIcon="@drawable/ic_google_pay"
                            app:chipIconEnabled="true" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Container per i dettagli della carta di credito -->
                    <LinearLayout
                        android:id="@+id/creditCardDetailsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <!-- Campo numero carta migliorato -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/cardNumberLayout"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:errorIconDrawable="@null"
                            app:startIconDrawable="@drawable/ic_credit_card"
                            app:startIconTint="?attr/colorOnSurfaceVariant">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cardNumberInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/card_number"
                                android:inputType="number"
                                android:maxLength="19"
                                android:paddingStart="40dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Container per data scadenza e CVV -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/expiryLayout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:hint="@string/expiry"
                                app:placeholderText="MM/YY"
                                app:startIconDrawable="@drawable/ic_calendar"
                                app:startIconTint="?attr/colorOnSurfaceVariant">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/expiryInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="date"
                                    android:maxLength="5" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/cvvLayout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/cvv"
                                app:passwordToggleEnabled="true"
                                app:startIconDrawable="@drawable/ic_lock"
                                app:startIconTint="?attr/colorOnSurfaceVariant">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/cvvInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberPassword"
                                    android:maxLength="3" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/persistent_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?attr/colorSurfaceContainerLow"
        android:elevation="8dp"
        tools:layout_height="200dp">


        <!-- Prezzo base -->
        <TextView
            android:id="@+id/basePriceLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/base_price"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            app:layout_constraintEnd_toStartOf="@+id/basePrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Base Price" />

        <TextView
            android:id="@+id/basePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            app:layout_constraintBaseline_toBaselineOf="@+id/basePriceLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="50.00 â‚¬" />

        <!-- Sconto -->
        <TextView
            android:id="@+id/discountLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/discount"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorError"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/basePriceLabel" />

        <TextView
            android:id="@+id/discountAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorError"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/discountLabel"
            tools:text="-10.00 â‚¬" />

        <!-- Separatore -->
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/discountAmount" />

        <!-- Totale finale -->
        <TextView
            android:id="@+id/totalLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/total_to_pay"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <TextView
            android:id="@+id/finalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/totalLabel"
            tools:text="40.00 â‚¬" />

        <TextView
            android:id="@+id/earnedPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/points_earned"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintTop_toBottomOf="@id/totalLabel"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Punti guadagnati: 200" />

        <TextView
            android:id="@+id/newPointsBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintTop_toBottomOf="@id/earnedPoints"
            app:layout_constraintTop_toTopOf="@id/earnedPoints"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nuovo saldo punti: 1200" />

        <!-- Bottone di conferma -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/checkoutConfirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/confirm_payment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newPointsBalance" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
